mixin sidebar(SIDEBAR_DATA)
  .sidebar
    if SIDEBAR_DATA.coupon
      .coupon
        span.coupon__text Купон
        span.coupon__amount 4



    if SIDEBAR_DATA.menu
      ul.sidebar-menu.card
        li.sidebar-menu__item
          a.sidebar-menu__link.my-prognosis(href='#') Мои прогнозы
          ul.sidebar-menu-inner
            li.sidebar-menu-inner__item
              a.sidebar-menu-inner__link(href='#') За и Против
        li.sidebar-menu__item
          a.sidebar-menu__link.my-feed(href='#') Лента прогнозов <span class='feeds-amount'>4</span>
        li.sidebar-menu__item
          a.sidebar-menu__link.my-competitions.active(href='#') Мои конкурсы



    if SIDEBAR_DATA.prognosis
      .card.sidebar-list.sidebar-prognosis
        .sidebar__title-cont
          h2.sidebar__title Прогнозы

        ul.sidebar-list__items
          span.sidebar-list__title Все прогнозы
          li.sidebar-list__item
            a.sidebar-list__link Лучшие <span class='amount'><i class='icon clock-light-icon'></i>687</span>
          li.sidebar-list__item
            a.sidebar-list__link Популярные <span class='amount'><i class='icon clock-light-icon'></i>400</span>
          li.sidebar-list__item
            a.sidebar-list__link От аналитиков <span class='amount'><i class='icon clock-light-icon'></i>128</span>
          li.sidebar-list__item
            a.sidebar-list__link На сегодня <span class='amount'><i class='icon clock-light-icon'></i>87</span>
          li.sidebar-list__item
            a.sidebar-list__link На завтра <span class='amount'><i class='icon clock-light-icon'></i>16</span>



    if SIDEBAR_DATA.competitions
      .card.sidebar-list.sidebar-competitions
        .sidebar__title-cont
          h2.sidebar__title Конкурсы

        ul.sidebar-list__items
          li.sidebar-list__item
            a.sidebar-list__link.competitions-list Список конкурсов
          li.sidebar-list__item
            a.sidebar-list__link.cappers-rate Рейтинг капперов
          li.sidebar-list__item
            a.sidebar-list__link Общие правила
          li.sidebar-list__item
            a.sidebar-list__link FAQ
          li.sidebar-list__item
            a.sidebar-list__link Архив конкурсов



